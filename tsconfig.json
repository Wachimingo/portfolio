{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    // "module": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/**/*.ts",
    "**/**/*.tsx",
    "components/checkouts/CheckoutForm.js",
    "models/billModel.ts",
    "pages/_app.js",
    "components/localeSwitcher.js",
    "pages/x.js",
    "components/Toast.js",
    "models/skillsModel.ts",
    "utils/dbConnection.js"
  ],
  "exclude": [
    "node_modules",
    "pages/x.js",
    "./next.config.js",
    "./context/*.js",
    "./components/clientSideComponents/*.js",
    "./components/*.js",
    "./pages/_app.js",
    "./pages/api/auth/*.js",
    "./pages/api/*.js"
  ]
}